<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StopWatchActivity"
    android:background="@drawable/ic_background_second_fragment">

    <TextView
        android:id="@+id/textTimerFragmentSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="00:00:00"
        android:textColor="@color/white"
        android:textSize="80sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.454" />


    <ImageView
        android:id="@+id/imageViewReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:src="@drawable/ic_stop"
        app:layout_constraintEnd_toEndOf="@+id/textTimerFragmentSecond"
        app:layout_constraintHorizontal_bias="0.298"
        app:layout_constraintStart_toStartOf="@+id/textTimerFragmentSecond"
        app:layout_constraintTop_toBottomOf="@+id/textTimerFragmentSecond" />

    <ImageView
        android:id="@+id/imageViewStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:src="@drawable/ic_start"
        app:layout_constraintEnd_toEndOf="@+id/textTimerFragmentSecond"
        app:layout_constraintHorizontal_bias="0.732"
        app:layout_constraintStart_toStartOf="@+id/textTimerFragmentSecond"
        app:layout_constraintTop_toBottomOf="@+id/textTimerFragmentSecond" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_next_stopwatch"
        android:layout_width="159dp"
        android:layout_height="57dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="@color/button_hello_activity"
        android:text="Next"
        android:textSize="30sp"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewReset"
        android:textColor="@color/white"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_prev_stopwatch"
        android:layout_width="220dp"
        android:layout_height="57dp"
        android:layout_marginTop="128dp"
        android:backgroundTint="@color/button_hello_activity"
        android:text="Previous"
        android:textSize="30sp"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewReset"
        android:textColor="@color/white"/>


</androidx.constraintlayout.widget.ConstraintLayout>